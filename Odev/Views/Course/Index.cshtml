@model List<Course>

<p>
    <a asp-controller="Course" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>#</td>
                <td>#</td>
                <td>#</td>
                <td style="color:red"><a href="/Course/delete/@item.Id">Delete</a></td>
                <td style="color:blue"><a href="/Course/update/@item.Id">Update</a></td>
            </tr>
        }

    </tbody>
</table>

