@model List<School>
<p>
    <a asp-controller="school" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Classrooms</th>
            <th scope="col">Students</th>
            <th scope="col">Teachers</th>
            <th scope="col">Lessons</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><a href="/Classroom/index/@item.Id">Go to Classrooms</a></td>
                <td><a href="/Student/index/@item.Id">Go to Students</a></td>
                <td><a href="/Teacher/index/@item.Id">Go to Teachers</a></td>
                <td><a href="/lesson/index/@item.Id">Go to Lessons</a></td>
                <td style="color:red"><a href="/school/delete/@item.Id">X</a></td>
                <td style="color:blue"><a href="/school/update/@item.Id">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
