@model List<ClassRoom>

<p>
    <a asp-controller="ClassRoom" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Capasity</th>
            <th scope="col">School</th>
            <th scope="col">Lessons</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Capasity</td>
                <td><a href="/school/index/@item.Id">Go to School</a></td>
                <td><a href="/lesson/index/@item.Id">Go to Lessons</a></td>
                <td style="color:red"><a href="/ClassRoom/delete/@item.Id">Delete</a></td>
                <td style="color:blue"><a href="/ClassRoom/update/@item.Id">Update</a></td>
            </tr>
        }

    </tbody>
</table>
