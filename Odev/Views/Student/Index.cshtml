@model List<Student>

<p>
    <a asp-controller="Student" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">IDNumber</th>
            <th scope="col">School</th>
            <th scope="col">Lessons</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.IDNumber</td>
                <td><a href="/School/index/@item.Id">Go to School</a></td>
                <td><a href="/lesson/index/@item.Id">Go to Lessons</a></td>
                <td style="color:red"><a href="/Student/delete/@item.Id">Delete</a></td>
                <td style="color:blue"><a href="/Student/update/@item.Id">Update</a></td>
            </tr>
        }

    </tbody>
</table>

